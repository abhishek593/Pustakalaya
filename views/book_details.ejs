<%- include('partials/header') %>
<h1><%= details[0].title %></h1>
<h2><%= details[0].ISBN %></h2>
<h2><%= details[0].year_of_pub %></h2>
<h4><%= details[0].shelf_id %></h4>
<h4><%= details[0].current_status %></h4>
<table border="1px">
    <thead>
        <th>Copy Number</th>
        <th>Availability</th>
    </thead>
    <tbody>
        
            <% copies.forEach(function(copy){    %>
            <tr>
                <td><%= copy.copy_number %></td>
                <% if(copy.status===1){  %>
                <td>Availiable</td>
                <% }else{   %>
                <td>Unavailiable</td>
                <% }  %>
            </tr>
            <% })   %>
        
    </tbody>
    
</table>
<form action="/hold_request/<%= details[0].ISBN %>" method="post">
    <% if(hold){  %>
        <button type="submit" id="Hold">Hold</button>
    <%  }else{  %>
        <button type="submit" role="button" id="Hold" disabled>Hold</button>
    <%  }  %>
</form>
<form action="/issue/<%= details[0].ISBN %>" method="post">
    <% if(issue){  %>
        <button type="submit" id="Issue">issue</button>
    <%  } %>
</form>

<%- include('partials/footer') %>